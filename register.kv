<CustomLayout>
    canvas:
        Rectangle:
            source: 'images/index_background.jpg'
            pos: root.pos
            size: root.size
<MyLabel@MDTextField>:
    halign: 'center'
    text_size: '50sp'
    font_size: '50sp'
    text_color : "BLUE"
    color_mode: 'accent'
<Register>:
    name: 'Login'

    fullscreen: True

    CustomLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'
            MyLabel:
                id: login
                hint_text: "Username"
                max_text_length: 10
                color_mode: 'accent'
                halign: 'center'
                text_size: '50sp'
                font_size: '50sp'

            MyLabel:
                id: password1
                helper_text_mode: "on_focus"
                helper_text: "Color is defined by \'line_color_focus\' property"
                line_color_focus: self.theme_cls.opposite_bg_normal  # This is the color used by the textfield
                hint_text: "Password"
                required: True
                helper_text_mode: "on_error"
                password:True
            MyLabel:
                id: password2
                helper_text_mode: "on_focus"
                helper_text: "Color is defined by \'line_color_focus\' property"
                line_color_focus: self.theme_cls.opposite_bg_normal  # This is the color used by the textfield
                hint_text: "Confirm Password"
                required: True
                helper_text_mode: "on_error"
                password:True
            BoxLayout:
                orientation: "horizontal"
                MDRaisedButton:
                    markup: True
                    text: "Login"
                    font_size : 32
                    elevation_normal: 2
                    opposite_colors: True
                    on_press: root.manager.current = "register"
                Label:
                    text: "Not register Click here"
                MDRaisedButton:
                    markup: True
                    text: "Register"
                    font_size : 32
                    elevation_normal: 2
                    opposite_colors: True
                    on_press: root.manager.current = "login"

